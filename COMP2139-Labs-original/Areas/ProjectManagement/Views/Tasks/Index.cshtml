
@model IEnumerable<ProjectTask> //specifies the collection of project tables
@{
    ViewData["Title"] = "Tasks List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Project ID</th>
            <th>Actions</th> <!-- column for action buttons, details, edit, delete-->
        </tr>
    </thead>

    <tbody>
        @foreach (var task in Model) {
            <tr>
                <td>@task.ProjectTaskID</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.ProjectID</td>
                <td>
                    <a asp-action="Details" asp-route-id="@task.ProjectID" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@task.ProjectTaskID" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@task.ProjectTaskID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary">Create New Task</a>
<a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Projects</a>